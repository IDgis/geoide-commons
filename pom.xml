	<repositories>
		<repository>
			<id>idgis-public</id>
			<url>http://nexus.idgis.eu/content/groups/public/</url>
			<releases>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>idgis-restricted</id>
			<url>http://nexus.idgis.eu/content/groups/restricted/</url>
			<releases>
				<updatePolicy>never</updatePolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>

	<distributionManagement>
		<repository>
			<id>idgis-restricted-releases</id>
			<url>http://nexus.idgis.eu/content/repositories/restricted-releases/</url>
		</repository>
		<snapshotRepository>
			<id>idgis-restricted-snapshots</id>
			<url>http://nexus.idgis.eu/content/repositories/restricted-snapshots/</url>
		</snapshotRepository>
	</distributionManagement>	
	
